<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <PackageId>JGUZDV.DynamicForms</PackageId>
        <IsPackable>true</IsPackable>
        <Version>1.0.0-beta1</Version>
        <Authors>Aaron Puhl</Authors>
        <Company>Zentrum für Datenverarbeitung - JGU Mainz</Company>
        <PackageDescription>Library to create dynamic forms at runtime.</PackageDescription>
        <OutputType>Library</OutputType>

        <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>

    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Localization.Abstractions" Version="[9.0.0,)" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\..\JGUZDV.Extensions.Json\src\JGUZDV.Extensions.Json.csproj" />
        <ProjectReference Include="..\..\..\JGUZDV.L10n\src\JGUZDV.L10n.csproj" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Update="Resources\Validations.resx">
            <Generator>ResXFileCodeGenerator</Generator>
            <LastGenOutput>Validations.Designer.cs</LastGenOutput>
        </EmbeddedResource>
    </ItemGroup>

</Project>
