@inject IStringLocalizer<ComponentStrings> LR


<Dropdown DropDownMenuClass="dropdown-menu-end">
    <DropdownLabelContent>
        <jgu-theme-icon>
            <i class="fas fa-adjust"></i>
        </jgu-theme-icon>
    </DropdownLabelContent>
    <DropdownContent>
        <jgu-theme-button class="dropdown-item" theme="light" role="menuitem" style="cursor: pointer;">
            @Icons.LightMode("small pe-1") @LR["Theme.Light"]
        </jgu-theme-button>

        <jgu-theme-button class="dropdown-item" theme="dark" role="menuitem" style="cursor: pointer;">
            @Icons.DarkMode("small pe-1") @LR["Theme.Dark"]
        </jgu-theme-button>

        <jgu-theme-button class="dropdown-item" theme="auto" role="menuitem" style="cursor: pointer;">
            @Icons.AutoMode("small pe-1") Auto
        </jgu-theme-button>
    </DropdownContent>
</Dropdown>