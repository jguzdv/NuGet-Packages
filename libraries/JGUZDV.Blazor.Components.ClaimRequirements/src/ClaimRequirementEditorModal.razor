@using JGUZDV.Extensions.Authorization;

<ClaimRequirementEditor @bind-ClaimRequirement="ClaimRequirement"></ClaimRequirementEditor>
<button class="btn btn-success" @onclick="() => OnSave.InvokeAsync(ClaimRequirement)">@LR["Editor.Save"]</button>
<button class="btn btn-primary" @onclick="() => OnClose.InvokeAsync()">@LR["Editor.Discard"]</button>

@code {
    [Parameter]
    public ClaimRequirement ClaimRequirement { get; set; }

    [Parameter]
    public EventCallback<ClaimRequirement> OnSave { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }


}
