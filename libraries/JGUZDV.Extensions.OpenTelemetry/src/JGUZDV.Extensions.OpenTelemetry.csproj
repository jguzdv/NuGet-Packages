<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <PackageId>JGUZDV.Extensions.OpenTelemetry</PackageId>
    <IsPackable>true</IsPackable>
    <Version>1.0.0</Version>
    <Authors>Agim Shabani</Authors>
    <Company>Zentrum f√ºr Datenverarbeitung - JGU Mainz</Company>
    <PackageDescription>Extensions to observe applications via Azure Monitor and OpenTelemetry.</PackageDescription>

    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.3" />

    <PackageReference Include="Azure.Monitor.OpenTelemetry.Exporter" VersionOverride="1.3.0" />
    <PackageReference Include="OpenTelemetry.Extensions.Hosting" VersionOverride="1.9.0" Version="1.11.2" />
    <PackageReference Include="OpenTelemetry.Instrumentation.Http" VersionOverride="1.9.0" Version="1.11.1" />
  </ItemGroup>
</Project>